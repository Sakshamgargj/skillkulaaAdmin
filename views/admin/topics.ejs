<%- include('header')%>
<%- include('sidebar')%>
<%- include('navbar')%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
 
    <nav aria-label="breadcrumb" class="fs-4">
      <ol class="breadcrumb">
        <li class=""><a href="/viewtopics?id=<%= lesson._id %>" class="text-hover-primary"><i class='bx bx-arrow-back me-2' style="cursor: pointer; color: #566A7F;"></i></a> </li>
        <li class="breadcrumb-item">Course</li>
        <li class="breadcrumb-item"><a href="/viewcourse" class="text-hover-primary">View All Course</a></li>
        <li class="breadcrumb-item"><a href="/viewlesson?id=<%= lesson.courseId._id %>&name=<%= lesson.courseId.course %>" class="text-hover-primary">View All Lesson</a></li>
        <li class="breadcrumb-item"><a href="/viewtopics?id=<%= lesson._id %>" class="text-hover-primary">View All Topic</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Topic</li>
      </ol>
  </nav>

    <div class="row">
      <div class="col-md-12">
        <div class="card mb-4">
          <h5 class="card-header fs-4 fw-bold">Add Topic</h5>
          <form action="" method="post" enctype="multipart/form-data">
            <div class="card-body">
              <% if (typeof message !=='undefined' ) { %>
              <p style="color: rgb(255, 0, 0);">
                <%= message %>
              </p>
              <% } %>
              <% if(flash.error.length> 0){ %>
              <div class="d-inline-block text-danger fs-5 pb-2 mb-3 fw-bold" role="alert">
                <%= flash.error %>
              </div>
              <% } %>

             

              <!-- begin::row-->
              <div class="row">
                <!-- Name -->
                <div class="col-md-6">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Name</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bx-book'></i></span>
                        <input type="text" class="form-control" name="topic" value="" required id="basic-icon-default-fullname" placeholder="Enter Topic Name" aria-label="education" aria-describedby="basic-icon-default-fullname2" />
                      </div>
                    </div>
                  </div>
                </div>
                <!-- file/image -->
                <div class="col-md-6">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">File</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-image"></i></span>
                        <input type="file" id="upload" name="allfile" class="form-control" accept="" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end::row-->

              <!-- begin::row-->
              <div class="row">
                <!-- upload type -->
                <div class="col-md-6">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Upload Type</label>
                    <div class="col-sm-10">
                      <div class="input-group">
                        <!-- <label class="input-group-text" for="inputGroupSelect01">Upload Type</label> -->
                        <select class="form-select" required name="upload_type" id="upload_type">
                          <option value disabled selected> Choose.... </option>
                          <option value="Video" selected>Server Video</option>
                          <option value="URL">External URL</option>
                          <option value="YouTube">YouTube</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- video url -->
                <div class="col-md-6 d-none" id="input_video_url">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Video URL</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <input type="text" class="form-control" name="video_url" value=""  id="basic-icon-default-fullname" placeholder="Enter Video URL" aria-label="education" aria-describedby="basic-icon-default-fullname2" />
                      </div>
                    </div>
                  </div>
                </div>
                <!-- upload video -->
                <div class="col-md-6 d-none" id="input_video_file">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Upload Video</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-image"></i></span>
                        <input type="file" id="upload" name="video_file" class="form-control" accept="video/mp3,video/mp4,video/avi,video/mov,video/wmv,video/flv,video/webm,video/mkv" />
                      </div>
                    </div>
                  </div>
                </div>
                <!-- youtube Code -->
                <div class="col-md-6 d-none" id="input_video_youtube">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Youtube</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <input type="text" class="form-control" name="youtube_code" value=""  id="basic-icon-default-fullname" placeholder="Enter Youtube Code" aria-label="education" aria-describedby="basic-icon-default-fullname2" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end::row-->

              <!-- begin::row-->
              <div class="row">
                <!-- description -->
                <div class="col-md-12">
                  <div class="row mb-3">
                    <label class="col-sm-1 col-form-label" for="basic-icon-default-fullname">description</label>
                    <div class="col-sm-11">
                      <div class="">
                        <textarea class="form-control" name="description" id="kt_docs_second_ckeditor_classic" placeholder="Write Your content"></textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end::row-->

              <div class="row justify-content-end">
                <div class="col-sm-11">
                  <button type="submit" class="btn btn-primary">Create</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- / Content -->

<%- include('footer')%>