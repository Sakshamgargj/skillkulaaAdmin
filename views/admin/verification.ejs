<%- include('header')%>
<%- include('sidebar')%>
<%- include('navbar')%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"> Verification</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">

      <% if (hasKey && verificationKey) { %>
      <!-- Basic with Icons -->
      <div class="col-md-6">
        <div class="card mb-6">
          <h5 class="card-header">Revoke Key</h5> 
          <!-- Account -->
          <form action="/revoke-key" method="post">
            <div class="card-body">
              <% if (typeof message !=='undefined' ) { %>
              <p style="color: rgb(255, 0, 0);">
                <%= message %>
              </p>
              <% } %>
              <% if(flash.error.length> 0){ %>
              <div class="d-inline-block text-danger fs-5 pb-2 mb-3 fw-bold" role="alert">
                <%= flash.error %>
              </div>
              <% } %>
              <% if(flash.success.length> 0){ %>
                <div class="d-inline-block text-success fs-5 pb-2 mb-3 fw-bold" role="alert">
                  <%= flash.success %>
                </div>
                <% } %>
              <% 
              function maskKey(key) {
                  if (!key) return "";
                  const lastFive = key.slice(-5);
                  let masked = ".................................................................."; 
                  return masked + lastFive; 
              } 
            %>
              <div class="row mb-4">
                <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Key</label>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-key"></i></span>
                    <input type="text" class="form-control" name="key" required id="basic-icon-default-fullname" value="<%= verificationKey ? maskKey(verificationKey) : "" %>" placeholder="Enter key" />
                  </div>
                </div>
              </div>

              <div class="row justify-content-end">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Revoke</button>
                </div>
              </div>

          </form>
        </div>
      </div>
      <% } else { %>
         <!-- Basic with Icons -->
      <div class="col-md-6">
        <div class="card mb-6">
          <h5 class="card-header">Verification</h5> 
          <!-- Account -->
          <form action="/verify-key" method="post">
            <div class="card-body">
              <% if (typeof message !=='undefined' ) { %>
              <p style="color: rgb(255, 0, 0);">
                <%= message %>
              </p>
              <% } %>
              <% if(flash.error.length> 0){ %>
              <div class="d-inline-block text-danger fs-5 pb-2 mb-3 fw-bold" role="alert">
                <%= flash.error %>
              </div>
              <% } %>
              <% if(flash.success.length> 0){ %>
              <div class="d-inline-block text-success fs-5 pb-2 mb-3 fw-bold" role="alert">
                <%= flash.success %>
              </div>
              <% } %>

              <div class="row mb-4">
                <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Key</label>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bxs-key"></i></span>
                    <input type="text" class="form-control" name="key" value="" required id="basic-icon-default-fullname" placeholder="Enter key" />
                  </div>
                </div>
              </div>

              <div class="row justify-content-end">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Verify</button>
                </div>
              </div>

          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
<!-- / Content -->

<%- include('footer')%>